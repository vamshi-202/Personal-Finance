@model PersonalFinance.Data.Models.Transaction

@{
  ViewData["Title"] = "Delete Transaction";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
  <div class="card p-4 shadow-sm rounded" style="max-width: 600px; margin: auto;">
    <h3 class="text-danger text-center mb-3">Are you sure you want to delete this transaction?</h3>

    <dl class="row">
      <dt class="col-sm-4">Date</dt>
      <dd class="col-sm-8">@Model.TransactionDate.ToShortDateString()</dd>

      <dt class="col-sm-4">Category</dt>
      <dd class="col-sm-8">@Model.CategoryName</dd>

      <dt class="col-sm-4">Type</dt>
      <dd class="col-sm-8">@Model.Type</dd>

      <dt class="col-sm-4">Amount</dt>
      <dd class="col-sm-8">₹@Model.Amount</dd>

      <dt class="col-sm-4">Description</dt>
      <dd class="col-sm-8">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" method="post">
      <input type="hidden" asp-for="TransactionId" />
      <div class="text-center">
        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
      </div>
    </form>
  </div>
</div>
