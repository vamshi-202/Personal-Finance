@model IEnumerable<PersonalFinance.Data.Models.Transaction>

@{
  ViewData["Title"] = "Your Transactions";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
  <h2 class="text-center text-primary mb-4">Your Transactions</h2>

  <div class="mb-3">
    <form method="get" class="row g-3">
      <div class="col-md-3">
        <label class="form-label">Type</label>
        <select name="type" class="form-select">
          <option value="">-- All Types --</option>
          <option value="Income" selected="@(ViewBag.Type == "Income")">Income</option>
          <option value="Expense" selected="@(ViewBag.Type == "Expense")">Expense</option>
        </select>
      </div>

      <div class="col-md-3">
        <label class="form-label">From Date</label>
        <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control" />
      </div>

      <div class="col-md-3">
        <label class="form-label">To Date</label>
        <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control" />
      </div>

      <div class="col-md-3 d-flex align-items-end justify-content-between">
        <button type="submit" class="btn btn-primary me-2">Apply Filter</button>
        <a asp-action="Index" class="btn btn-secondary">Clear</a>
        <a asp-action="Create" class="btn btn-success">+ Add</a>
      </div>
    </form>
  </div>

  @if (!Model.Any())
  {
    <div class="alert alert-info text-center">
      No transactions found for the selected filters.
    </div>
  }
  else
  {
    <table class="table table-bordered table-striped">
      <thead class="table-light">
        <tr>
          <th>Date</th>
          <th>Category</th>
          <th>Type</th>
          <th>Amount</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var t in Model)
        {
          <tr>
            <td>@t.TransactionDate.ToShortDateString()</td>
            <td>@t.CategoryName</td>
            <td>@t.Type</td>
            <td>₹@t.Amount</td>
            <td>@t.Description</td>
            <td>
              <a asp-action="Edit" asp-route-id="@t.TransactionId" class="btn btn-sm btn-warning">Edit</a>
              <a asp-action="Delete" asp-route-id="@t.TransactionId" class="btn btn-sm btn-danger">Delete</a>
              <a asp-action="Details" asp-route-id="@t.TransactionId" class="btn btn-sm btn-info">Details</a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  }
</div>
