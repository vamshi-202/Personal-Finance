@model PersonalFinance.Models.DTO.User.LoginUserDto

@{
  ViewData["Title"] = "Login";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
  <div class="card login-card shadow p-4 rounded">
    <h2 class="text-center mb-4 text-primary">Login</h2>

    <form asp-action="Login" method="post">
      <div class="mb-3">
        <label asp-for="UserName" class="form-label">Username</label>
        <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
        <span asp-validation-for="UserName" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" id="passwordBox" placeholder="Enter your password" />
        <div class="form-check mt-2">
          <input class="form-check-input" type="checkbox" id="togglePassword" />
          <label class="form-check-label" for="togglePassword">
            Show Password
          </label>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary w-100">Login</button>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  <script>
    document.getElementById("togglePassword").addEventListener("change", function () {
      const pwd = document.getElementById("passwordBox");
      pwd.type = this.checked ? "text" : "password";
    });
  </script>
}

<style>
  .login-card {
    max-width: 400px;
    margin: auto;
    margin-top: 60px;
    animation: fadeIn 0.5s ease-in-out;
    border: 1px solid #dee2e6;
    background-color: #fff;
  }

  @@keyframes fadeIn {
    from

  {
    opacity: 0;
    transform: translateY(10px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }

  }
</style>
